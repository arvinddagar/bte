          = render "shared/errors", object: f.object
          = f.fields_for :user do |user|
            = user.label :email
            = user.email_field :email, placeholder: 'Email'
            = user.label :password, placeholder: 'Password'
            = user.password_field :password
          = f.label :username
          = f.text_field :username, placeholder: 'Enter your full name'
          .content-box.last-one
            = f.button class: "btn btn-success"
  .modal-footer
    a#student_modal_close_button.btn data-dismiss="modal" href=""  Close
